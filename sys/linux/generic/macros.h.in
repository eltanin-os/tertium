/* nix macros */
#define C_NIX_MAJOR(a) \
((((uvlong)(a) >> 31 >> 1) & 0xFFFFF000) | (((uvlong)(a) >> 8) & 0xFFF))
#define C_NIX_MINOR(a) \
((((uvlong)(a) >> 12) & 0xFFFFFF00) | (((uvlong)(a) >> 0) & 0xFF))
#define C_NIX_MAKEDEV(a, b) \
((((uvlong)(a) & 0xFFFFFF00) << 32) | \
 (((uvlong)(a) & 0xFF)       <<  8) | \
 (((uvlong)(b) & 0xFF00)     << 24) | \
 (((uvlong)(b) & 0xFFFF00FF)))

